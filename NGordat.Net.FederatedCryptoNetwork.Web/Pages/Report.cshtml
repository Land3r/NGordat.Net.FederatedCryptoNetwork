@page
@model NGordat.Net.FederatedCryptoNetwork.Web.Pages.ReportModel
@{
}

@section Hero {
    <div class="container bg-theme-light p-4 rounded border border-warning">
        <h3></h3>
        <div class="row justify-content-between">
            <div class="col-lg-12 pt-5 pt-lg-0 order-2 order-lg-1 d-flex align-items-center">
                <div data-aos="zoom-out">
                    <h1><i class="fas fa-exclamation-triangle theme-orange"></i> Report an issue</h1>
                    <h2>We are sorry to hear that you experienced an issue with the site or any of the provided links.</h2>
                    <h2>Please tell us a little bit more about what happended</h2>
                </div>
            </div>
        </div>
    </div>
}

<div class="container bg-white rounded p-4">
    <form method="post">
        <div>
            <div class="form-group">
                <label asp-for="Report.Id" class="form-label">Report Id</label>
                <input asp-for="Report.Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Report.Title" class="form-label">Title</label>
                <input asp-for="Report.Title" class="form-control" maxlength="128" />
                <span asp-validation-for="Report.Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Category" class="form-label">Category</label>
                <select asp-for="Report.Category" asp-items="NGordat.Net.FederatedCryptoNetwork.Web.ViewModels.Faucets.FaucetCategory.GetListItems()" class="form-control chosen add-option-empty" data-placeholder="Choose a category"></select>
                <span asp-validation-for="Report.Category"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Name" class="form-label">Name</label>
                <select asp-for="Report.Name" class="form-control chosen"></select>
                <span asp-validation-for="Report.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Description" class="form-label">Description</label>
                <textarea asp-for="Report.Description" class="form-control">></textarea>
                <span asp-validation-for="Report.Description"></span>
            </div>
            <button type="submit" asp-page-handler="CreateReport" class="btn btn-success">Create report</button>
        </div>
    </form>
</div>

@section Scripts {
} 