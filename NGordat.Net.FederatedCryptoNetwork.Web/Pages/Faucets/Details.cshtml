@page "{faucetName}/{faucetId}"
@model NGordat.Net.FederatedCryptoNetwork.Web.Pages.Faucets.DetailsModel

@{
    Layout = "_Layout";
    ViewBag.PageTitle = "Faucets - " + Model.Faucet.Name;
    string recommendedClass = Model.Faucet.Recommended.HasValue && Model.Faucet.Recommended == true ? "border border-warning" : "";
    string detailType = "Faucets";
}

<div class="d-flex align-items-center p-3 text-white-50 bg-theme-orange rounded box-shadow" style="margin-top: 74px;">
    <img class="mr-3" src="/images/faucets/faucetcrypto.jpg" alt="FaucetCrypto" width="64" height="64">
    <div class="lh-100 mr-auto">
        <h6 class="mb-0 text-white lh-100"><i class="fas fa-faucet"></i> Faucet &gt; FaucetCrypto</h6>
        <div>
            <span class="fa fa-star star-checked"></span>
            <span class="fa fa-star star-checked"></span>
            <span class="fa fa-star star-checked"></span>
            <span class="fa fa-star star-unchecked"></span>
            <span class="fa fa-star star-unchecked"></span>
        </div>
        <small>Since 2017</small>
    </div>
    <div class="badge-pill badge-success">10 min / j</div>
</div>

<div class="my-3 p-2 bg-white rounded box-shadow-xl-theme-orange flex-column @recommendedClass">
    <div class="d-flex flex-row justify-content-between">
        <div>
            <h6 class="border-bottom border-gray pb-2 mb-1">
                <span class="badge badge-warning mr-1 p-1" style="font-size:larger">#@Model.Faucet.Ranking in <a asp-page="List">@detailType</a></span>
                <span style="font-size:1.25rem;">@Model.Faucet.Name</span> - <a href="@Model.Faucet.AffiliateUrl" target="_blank">@Model.Faucet.PublicUrl</a>
                <span class="badge badge-success p-1" data-toggle="tooltip" data-placement="top" title="Last reported 2 days ago.">Status*: <strong>Legit</strong></span>
            </h6>
        </div>
        <div>
            <a asp-page="../Report"><i class="fas fa-exclamation-triangle"></i> Report an issue</a>
        </div>
    </div>

    <div class="d-flex flex-row justify-content-between">
        <div style="text-align:center">
            <img src="@Model.Faucet.Icon" height="64" />
            <div>
                <span class="fa fa-star star-checked"></span>
                <span class="fa fa-star star-checked"></span>
                <span class="fa fa-star star-checked"></span>
                <span class="fa fa-star star-unchecked"></span>
                <span class="fa fa-star star-unchecked"></span>
            </div>
            <small>Since 2017</small>
            <div>
                <a href="out"><i class="fas fa-info-circle"></i> Info</a>
            </div>
        </div>
        <div>
            <ul>
                <li>Timer</li>
                <li>PTC Ads / Shortlinks</li>
                <li>Challenges</li>
                <li>Withdraw direct to wallet</li>
                <li>
                    @if (Model.Faucet.Ranking != null && Model.Faucet.Ranking <= 3)
                    {
                        <span class="badge badge-warning mr-1 p-1">#@Model.Faucet.Ranking</span>
                    }
                    @if (Model.Faucet.Recommended.HasValue && Model.Faucet.Recommended == true)
                    {
                        <span class="badge badge-success mr-1 p-1">RECOMMENDED</span>
                    }
                </li>
            </ul>
        </div>
        <div class="lh-100">
            <a target="_blank" href="@Model.Faucet.AffiliateUrl"><img src="@Model.Faucet.Banner" width="728" height="90" /></a>
            <div class="text-muted pt-3">
                @Model.Faucet.DescriptionShort
            </div>
        </div>
    </div>
</div>

<div class="my-3 pb-2 bg-white rounded box-shadow-xl-theme-orange">
    <div class="d-flex flex-row justify-content-between border-bottom border-gray">
        <div>
            <h6 class="pb-2 mb-1">
                <span class="badge badge-warning mr-1 p-1" style="font-size:larger">#@Model.Faucet.Ranking in </span>
                <span style="font-size:1.25rem;">@Model.Faucet.Name</span> - <a href="@Model.Faucet.AffiliateUrl" target="_blank">@Model.Faucet.PublicUrl</a>
                <span class="badge badge-success p-1" data-toggle="tooltip" data-placement="top" title="Last reported 2 days ago.">Status*: <strong>Legit</strong></span>
            </h6>
        </div>
        <div>
            <a href="out"><i class="fas fa-info-circle"></i> Info</a>
        </div>
    </div>
</div>

<div class="my-3 pb-2 bg-white rounded box-shadow-xl-theme-pink">
    <div class="d-flex flex-row border-bottom border-gray">
        <h6 class="pb-2 mb-1 mr-1">
            <span style="font-size:1.25rem;">@Model.Faucet.Name</span>
        </h6>
    </div>
    <div class="">
        <p>FaucetCrypto is one of the oldest faucet available. It is online and paying since 2017.</p>
    </div>
    <div class="d-flex justify-content-start">
        <div id="slider">
            <img src="~/images/faucets/faucetcrypto/1.png" alt="FaucetCrypto" id="slide" style="max-width:500px;max-height:500px;">
            <div id="prev" onclick="ChangeSlide(-1)"><i class="fas fa-angle-left"></i></div>
            <div id="next" onclick="ChangeSlide(1)"><i class="fas fa-angle-right"></i></div>
        </div>
        <div id="description">
            This is a simple test.
        </div>
    </div>
</div> 

<div class="d-flex my-3 pb-2 bg-white rounded box-shadow justify-content-around">
    <div>Vote</div>
    <div>Comment</div>
</div>